@model IEnumerable<EmployeeManagementSystem.Models.Leave>

@{
    ViewData["Title"] = "Leave List";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <a href="@Url.Action("Create", "Leaves")" class="btn btn-success mb-3">Add New Leave</a>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Employee FullName</th>
                <th>Leave Type</th>
                <th>Status</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var leave in Model)
            {
                <tr>
                    <td>@leave.Employee?.FullName</td>
                    <td>@leave.Type</td>
                    <td>@leave.Status</td>
                    <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@leave.Reason</td>
                    
                    <td>
                        <a asp-action="Edit" asp-controller="Leaves" asp-route-id="@leave.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Leaves" asp-route-id="@leave.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
