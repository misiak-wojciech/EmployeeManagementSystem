@model EmployeeManagementSystem.Models.Leave

@{
    ViewData["Title"] = "Delete Leave";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <h4>Are you sure you want to delete this leave request?</h4>

    <div>
        <strong>Employee:</strong> @Model.Employee?.FullName
    </div>
    <div>
        <strong>Leave Type:</strong> @Model.Type
    </div>
    <div>
        <strong>Start Date:</strong> @Model.StartDate.ToString("yyyy-MM-dd")
    </div>
    <div>
        <strong>End Date:</strong> @Model.EndDate.ToString("yyyy-MM-dd")
    </div>
    <div>
        <strong>Status:</strong> @Model.Status
    </div>

   
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-3">Cancel</a>

    </form>
</div>
