@model List<EmployeeManagementSystem.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <a asp-controller="Departments" asp-action="Create" class="btn btn-success mb-3">Add New Department</a>


    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th style="width: 75%;">Name</th> 
                <th style="width: 25%;">Actions</th> 
            </tr>
        </thead>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    
                    <td>
                        <a asp-action="Edit" asp-controller="Departments" asp-route-id="@department.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Departments" asp-route-id="@department.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
