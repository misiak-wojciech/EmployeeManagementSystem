@model List<EmployeeManagementSystem.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

   
    <a href="@Url.Action("Create", "Employees")" class="btn btn-success mb-3">Add New Employee</a>

    
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>FullName</th>
                <th>Email</th>
                <th>Position</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.FullName</td>
                    <td>@employee.Email</td>
                    <td>@employee.Position?.Title</td> 
                    <td>@employee.Department?.Name</td> 
                    <td>
                        
                        <a asp-action="Edit" asp-controller="Employees" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                       
                        <a asp-action="Delete" asp-controller="Employees" asp-route-id="@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

