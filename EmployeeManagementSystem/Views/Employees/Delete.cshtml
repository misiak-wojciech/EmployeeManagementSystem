@model EmployeeManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <h4>Are you sure you want to delete this employee?</h4>

    <div>
        <strong>Name:</strong> @Model.FirstName <br>
        <strong>Name:</strong> @Model.LastName <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Position:</strong> @Model.Position?.Title <br />
        <strong>Department:</strong> @Model.Department?.Name
    </div>

    
    <form method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>

        <a asp-action="Index" class="btn btn-secondary ml-3">Cancel</a>

    </form>
</div>
