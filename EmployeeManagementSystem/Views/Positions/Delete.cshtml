@model EmployeeManagementSystem.Models.Position

@{
    ViewData["Title"] = "Delete Position";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <h4>Are you sure you want to delete this position?</h4>

    <div>
        <strong>Title:</strong> @Model.Title
    </div>


    <form  method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-3">Cancel</a>

    </form>
</div>
