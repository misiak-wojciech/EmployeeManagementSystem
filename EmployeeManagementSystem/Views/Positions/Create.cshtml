@model EmployeeManagementSystem.Models.Position

@{
    ViewData["Title"] = "Create Position";
}

<div class="container mt-4">
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="border p-4 shadow-sm rounded bg-light">
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-success ">Save</button>
            <a asp-action="Index" class="btn btn-secondary ml-3">Cancel</a>

        </div>
</form>
</div>
