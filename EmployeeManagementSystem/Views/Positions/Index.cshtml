@model IEnumerable<EmployeeManagementSystem.Models.Position>

@{
    ViewData["Title"] = "Positions";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <a href="@Url.Action("Create", "Positions")" class="btn btn-success mb-3">Add New Position</a>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model)
            {
                <tr>
                    <td>@position.Title</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Positions" asp-route-id="@position.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-controller="Positions" asp-route-id="@position.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
