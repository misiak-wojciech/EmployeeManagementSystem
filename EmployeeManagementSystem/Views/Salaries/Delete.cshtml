@model EmployeeManagementSystem.Models.Salary

@{
    ViewData["Title"] = "Delete Salary";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <h4>Are you sure you want to delete this salary?</h4>

    <div>
        <strong>Employee:</strong> @Model.Employee?.FullName

    </div>
    <div>
        <strong>Amount:</strong> @Model.Amount
    </div>
    <div>
        <strong>Payment Date:</strong> @Model.PaymentDate.ToString("yyyy-MM-dd")
    </div>

    <form method="post">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-3">Cancel</a>
    </form>
</div>
